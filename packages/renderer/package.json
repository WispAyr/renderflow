{
  "name": "@renderflow/renderer",
  "version": "0.1.0",
  "description": "Remotion-based video rendering engine for RenderFlow",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./compositions": {
      "import": "./dist/compositions/index.js",
      "types": "./dist/compositions/index.d.ts"
    }
  },
  "scripts": {
    "dev": "remotion studio",
    "build": "tsc && remotion build",
    "build:lib": "tsc",
    "render": "remotion render",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest"
  },
  "dependencies": {
    "@remotion/bundler": "^4.0.0",
    "@remotion/cli": "^4.0.0",
    "@remotion/renderer": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remotion": "^4.0.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@renderflow/core": "workspace:*"
  }
}
